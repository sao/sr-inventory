- if @items.count > 0
  table.table.table-striped
    tr
      th Number
      th width="15%"  Vendor
      th width="40%"  Description
      th per unit
      th unit of measure
      th width="100px"

    - @items.each do |i|
      tr
        td= i.number
        td= i.vendor
        td= i.description
        td= i.per_unit
        td= i.unit_of_measure
        td
          .btn-group
            = link_to edit_item_path(i), class: 'btn btn-sm btn-default' do
              span.glyphicon.glyphicon-pencil
            = link_to item_path(i), method: :delete, confirm: 'Are you sure you want to delete this item?', class: 'btn btn-sm btn-default' do
              span.glyphicon.glyphicon-trash
- else
  p.no-records= sanitize "You currently have no Items. Please #{ link_to 'add some', new_item_path }. "
